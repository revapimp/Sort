	<script>
		var count = 0;
		var val;
		function validationForm(){
			val = document.getElementById('num').value;
			count = 0;
			val = val.trim().split(',');
			if(val.length > 5){
				return false;
			}
			val.forEach(function(elem, index){
				if(isNaN(elem)){
					alert('inavlid input');
					count++;
					break;
				}

				if(elem > 100){
					alert(elem + ' is greater than 100');
					count++;
				}
			});
			return (count == 0);
		}
	</script>

	<form:form name="submitForm" method="POST" onsubmit="return validationForm()">

		<div align="center">
			<table>
				<tr>
					<td>Enter Numbers</td>
					<td><input type="textarea" name="Num" ></td>
				</tr>
				<tr>
					<td></td>
					<td><input type="submit" value="Add"/></td>
				</tr>
			</table>
			
			<div>${error}</div>
			
			
			<div style="color: red">${error}</div>

		</div>
